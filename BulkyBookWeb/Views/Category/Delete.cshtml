@model Category

<form method="post" asp-action="Delete">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Create Category</h2>
		</div>
		
		@*<div asp-validation-summary="All"></div>*@
		<input asp-for="Id" hidden/>
		<div class="mb-3">
			<label asp-for="Name">Name</label>
			<input asp-for="Name" class="form-control" disabled></input>
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="DisplayOrder">Display Order</label>
			<input asp-for="DisplayOrder" class="form-control" disabled/>
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>
		</div>

		<button class="btn btn-danger" type="submit" style="width:150px">Delete</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
	</div>

</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial"></partial>
	}
}

